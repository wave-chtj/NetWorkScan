<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.goldze.main.ui.MainAtyViewModule" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="35dp"
        android:paddingRight="15dp">
        <!--循环间隔-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="网络检查间隔时间(分钟)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_radius_bg"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_cycle_interval"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:entries="@array/main_cycleInterval" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:text="网络状态异常扫描次数" />
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:text="例如：连接超时,连接失败,未准备好" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_radius_bg"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_err_scan_count"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:entries="@array/main_errScanCount" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:text="保存并重新启用"
            binding:onClickCommand="@{viewModel.setParamClick}" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:text="@={viewModel.openCloseTv}"
            binding:onClickCommand="@{viewModel.closeServiceClick}" />

    </LinearLayout>
</layout>
