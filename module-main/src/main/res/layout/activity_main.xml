<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.goldze.main.ui.MainAtyViewModuleTest" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="@string/main_now_model_type"/>
                <TextView
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.modelTypeNameByFirst}"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="7dp"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_model_type_err_prompt"/>
            <!--循环间隔-->
            <TextView
                android:textSize="13sp"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_select_model"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/main_first_start_set_model"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/txt_radius_bg"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_model"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/main_net_delete"
                        binding:onClickCommand="@{viewModel.delTypeModelClick}"
                        android:textColor="@color/blue"
                        android:textSize="13sp" />
                    <View
                        android:layout_width="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/gray"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/main_net_add"
                        binding:onClickCommand="@{viewModel.addTypeModelClick}"
                        android:textColor="@color/blue"
                        android:textSize="13sp" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="0.5dp"/>

            <!--循环间隔-->
            <TextView
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_net_check_interval"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/txt_radius_bg"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_cycle_interval"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/main_net_err_count"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/main_net_abnormal_example"
                android:textSize="11sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/txt_radius_bg"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_err_scan_count"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:text="@string/main_net_default_address"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/txt_radius_bg"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_net_connect"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/main_net_delete"
                        binding:onClickCommand="@{viewModel.delAddrClick}"
                        android:textColor="@color/blue"
                        android:textSize="13sp" />
                    <View
                        android:layout_width="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/gray"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/main_net_add"
                        binding:onClickCommand="@{viewModel.addAddrClick}"
                        android:textColor="@color/blue"
                        android:textSize="13sp" />
                </LinearLayout>

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_radius_bg"
                android:layout_marginTop="15dp"
                android:text="@string/main_save_re_enable"
                binding:onClickCommand="@{viewModel.setParamClick}" />
            <Button
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_radius_bg"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="@={viewModel.openCloseTv}"
                binding:onClickCommand="@{viewModel.closeServiceClick}" />

        </LinearLayout>

    </ScrollView>
</layout>
