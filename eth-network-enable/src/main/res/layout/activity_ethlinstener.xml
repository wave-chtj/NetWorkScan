<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.face.ethlinstener.ui.viewmodel.EthLinstenerViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*选择以太网检查的周期" />

        <Spinner
            android:id="@+id/sp_cycle_interval"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="15dp"
            android:entries="@array/ethlinstener_cycleInterval" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存并启用服务"
            binding:onClickCommand="@{viewModel.startServiceClick}" />

    </LinearLayout>

</layout>
